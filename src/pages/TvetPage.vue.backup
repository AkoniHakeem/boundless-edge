      ...modalForm.value,
      program: 'Software Development',
      type: 'software-development-program',
    };

    const response = await fetch('/.netlify/functions/apply-tvet', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(formData),
